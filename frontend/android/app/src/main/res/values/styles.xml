<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme (Material Design 3 inspired for Betgistics) -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">#8b5cf6</item>
        <item name="colorPrimaryDark">#050510</item>
        <item name="colorAccent">#a78bfa</item>
        <item name="android:windowBackground">#050510</item>
        <item name="android:navigationBarColor">#050510</item>
        <item name="android:statusBarColor">#050510</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:background">@null</item>
        <item name="android:navigationBarColor">#050510</item>
        <item name="android:statusBarColor">#050510</item>
    </style>

    <style name="AppTheme.NoActionBarLaunch" parent="Theme.SplashScreen">
        <item name="android:background">@drawable/splash</item>
    </style>
</resources>
