# Server Configuration
PORT=3000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/betting-calculator

# External APIs
GEMINI_API_KEY=your_gemini_api_key_here

# OpenAI Configuration (for /api/matchup endpoint)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o

# Anthropic Configuration (optional - for /api/matchup endpoint with provider=claude)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# ESPN Integration (no API key required - uses public ESPN API)
# Note: ESPN's public API is used for team statistics
# No additional configuration needed

# Security
ADMIN_KEY=your_secure_admin_key_here

# CORS
FRONTEND_URL=http://localhost:5173

# Rate Limiting (optional)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
